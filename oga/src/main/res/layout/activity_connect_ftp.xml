<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dee1e6"
    android:orientation="vertical"
    tools:context=".ConnectFtp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/layout_border"
        android:gravity="center|top"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ftp_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="16dp"
            android:hint="Enter FTP Url" />

        <EditText
            android:id="@+id/ftp_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Enter Password" />

        <EditText
            android:id="@+id/ftp_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Enter FTP Port" />

        <EditText
            android:id="@+id/ftp_usr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Enter User Name" />

        <EditText
            android:id="@+id/file_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Enter remote file location"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_connect_ftp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_layout"
            android:text="connect"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_layout"
            android:text="download file"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="gone" />

        <ListView
            android:id="@+id/list_view"
            android:layout_width="411dp"
            android:layout_height="190dp"
            android:layout_margin="5dp"
            android:background="@drawable/list_border"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>